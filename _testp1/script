#tst_verbosity

unset ZCONVEY_ID ZCONVEY_FD 2>/dev/null

zinit ice atclone'LANG=C command sleep 1.1; command cp -vf $TEST_DIR/zew.plugin.zsh zsh-editing-workbench.plugin.zsh'
zinit load z-shell/zsh-editing-workbench

print -rl -- "${(o)ZPLG_ICE[@]}" >! answer/ice
print -rl -- "${(okv)ZPLG_SICE[@]}" >! answer/sice

ZPLGM[TEST]=1
touch skip

print -P %F{yellow}'==' Measuring starts here '=='%F{default}

zmodload zsh/zprof
typeset -F3 SECONDS=0
() {
    repeat 200; do
        zinit load z-shell/zsh-editing-workbench
    done
}
local msg="\\e[1;33mMeasured time: \\e[1;35m$SECONDS\\e[0m"
print
zprof | head -n 30
print
print "$msg"

return 0
# vim:ft=zsh
